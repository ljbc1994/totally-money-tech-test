{
    "compilerOptions": {
        "baseUrl": "./app",
        "allowJs": false,
        "checkJs": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "lib": ["es6", "dom"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "types": ["node"],
        "typeRoots": ["../node_modules/@types/"]
    },
    "exclude": ["node_modules", "webpack", "wwwroot", "webpack.config.js"],
    "compileOnSave": false,
    "buildOnSave": false
}
